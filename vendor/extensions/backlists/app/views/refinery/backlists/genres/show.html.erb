<% content_for :body_content_title do %>
  <%= @genre.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @genre.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="genres">
      <% @genres.each do |genre| %>
        <li>
          <%= link_to genre.name, refinery.backlists_genre_path(genre) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
