<% content_for :body_content_title do %>
  <%= @backlist.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @backlist.title %>
    </p>
  </section>
  <section>
    <h1>Author</h1>
    <p>
      <%=raw @backlist.author %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @backlist.picture, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="backlists">
      <% @backlists.each do |backlist| %>
        <li>
          <%= link_to backlist.title, refinery.backlists_backlist_path(backlist) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
