<div class="content_rigth">

    <% content_for :body do %>
        <div id="genres">
            
            <div class="form-style-2-heading"></div>

            <!-- Genre links -->
            <% @all_genres.each do |genre| %>
                <%= link_to genre[:name], "#/#{genre[:name]}", class: "genre_link", data: {genre: genre[:name]} %>
            <% end %>

            <!-- Books per genre -->
            <% @all_genres.each do |genre| %>
                <div id="<%= genre[:name] %>" class="backlists">
                    <div class="owl-carousel">
                        <% genre[:backlists].each do |backlist| %>
                            <div>
                                <li>
                                    <%= image_fu(backlist.picture, "120x160#") %>
                                    <br />
                                    <div class="product_title">
                                        <%=raw backlist.title %>
                                    </div>
                                    <div class="product_author">
                                        <%=raw backlist.author %>
                                    </div>
                                </li>
                            </div>
                        <% end %>
                    </div>
                </div>
            <% end %>
            
        </div>
    <% end %>
    
    <%= render '/refinery/content_page' %>

</div>
<div class="content_left">
    <%= image_tag("logo-color.png", class:"logo") %>
</div>

<footer>
    <%= render "/refinery/footer" %>
</footer>

