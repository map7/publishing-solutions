<%= form_for [refinery, :backlists_admin, @backlist] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @backlist,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :author -%>
    <%= f.text_field :author -%>
  </div>

  <div class='field'>
    <%= f.label :picture -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :picture_id,
               :image => @backlist.picture,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.backlists.admin.backlists.backlist'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @backlist.title) -%>
<% end -%>
