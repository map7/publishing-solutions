<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(backlist) -%>">
  <span class='title'>
    <%= backlist.title %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.backlists_backlist_path(backlist), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_backlists_admin_backlist_path(backlist), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.backlists_admin_backlist_path(backlist), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: backlist.title)}}  ) %>
  </span>
</li>
