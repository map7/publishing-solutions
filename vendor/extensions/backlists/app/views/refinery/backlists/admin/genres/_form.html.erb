<%= form_for [refinery, :backlists_admin, @genre] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @genre,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.genres.admin.genres.genre'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @genre.name) -%>
<% end -%>
