<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(genre) -%>">
  <span class='title'>
    <%= genre.name %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.backlists_genre_path(genre), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_backlists_admin_genre_path(genre), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.backlists_admin_genre_path(genre), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: genre.name)}}  ) %>
  </span>
</li>
